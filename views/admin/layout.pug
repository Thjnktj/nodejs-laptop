<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(href="/admin/styles.css", rel="stylesheet")
        link(href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css", rel="stylesheet")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js")
    body.sb-nav-fixed

        nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark
            a.navbar-brand(href='/admin', style="text-align: center;") 
                span(style='color: blue') ADMIN 
                span LTE
            button#sidebarToggle.btn.btn-link.btn-sm.order-1.order-lg-0(href='#')
                i.fas.fa-bars
            // Navbar Search
            form.d-none.d-md-inline-block.form-inline.ml-auto.mr-0.mr-md-3.my-2.my-md-0
                .input-group
                    input.form-control(type='text', placeholder='Search for...', aria-label='Search', aria-describedby='basic-addon2')
                    .input-group-append
                        button.btn.btn-primary(type='button')
                            i.fas.fa-search
            // Navbar
            ul.navbar-nav.ml-auto.ml-md-0
                li.nav-item.dropdown
                    a#userDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                        i.fas.fa-user.fa-fw
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='userDropdown')
                        a.dropdown-item(href='#') Settings
                        a.dropdown-item(href='#') Activity Log
                        .dropdown-divider
                        a.dropdown-item(href='/sign-in') Logout

        #layoutSidenav
            #layoutSidenav_nav
                nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-dark
                    .sb-sidenav-menu
                        .nav
                            .sb-sidenav-menu-heading(style="color: white; text-align: center")
                                i.fas.fa-user-circle(style="font-size: 95px")
                                br
                                p ADMIN
                            .sb-sidenav-menu-heading 
                                i.fas.fa-tasks
                                span &nbsp;Quản lý
                            a.nav-link.collapsed(href='/admin/order')
                                .sb-nav-link-icon
                                    i.fas.fa-shopping-bag(style="font-size: 18px")
                                span Đơn hàng
                            a.nav-link.collapsed(href='/admin/product')
                                .sb-nav-link-icon
                                    i.fas.fa-newspaper
                                span Sản phẩm
                            a.nav-link.collapsed(href='/admin/device')
                                .sb-nav-link-icon
                                    i.fas.fa-newspaper
                                span Phụ kiện
                            .sb-sidenav-menu-heading Quản lý tài khoản
                            a.nav-link(href='/admin/users')
                                .sb-nav-link-icon
                                    i.fas.fa-user
                                span Tài khoản
                    .sb-sidenav-footer
                        .small Designer &amp; Development
                        span Student K62CNTTA
            #layoutSidenav_content
                block content
        script(src='https://code.jquery.com/jquery-3.4.1.min.js', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js', crossorigin='anonymous')
        script(src='/admin/scripts.js')
        script(src="/js/scripts.js")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js', crossorigin='anonymous')
        script(src='/admin/demo/chart-area-demo.js')
        script(src='/admin/demo/chart-bar-demo.js')
        script(src='https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js', crossorigin='anonymous')
        script(src='https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js', crossorigin='anonymous')
        script(src='/admin/demo/datatables-demo.js')