extends ../layout
block content
    .container-fluid
            h1.mt-4 Quản lý sản phẩm
            ol.breadcrumb.mb-4
                li.breadcrumb-item
                    a(href='/admin') Admin
                li.breadcrumb-item.active Product
            .card.mb-4
                .card-header
                    .row
                        .col-sm-9.col-md-10
                            i.fas.fa-table.mr-1
                            span Danh sách sản phẩm
                        .col-sm-3.col-md-2
                            a.btn.btn-primary(href="/admin/product/create") Thêm
                .card-body
                    .table-responsive
                        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
                            thead
                                tr
                                    th Hình ảnh
                                    th Tên máy
                                    th Ngày nhập
                                    th Số lượng
                                    th Tác vụ
                            tbody
                                each item in data
                                    tr
                                        td
                                            img(src="/upload/"+item.images[0].filename, alt="alt", style="width: 100px")
                                        td= item.name
                                        td= item.date
                                        td= item.count
                                        td
                                            a.mr-2(href="/admin/product/u="+ item._id).btn.btn-success Sửa
                                            a(href="/admin/product/d="+ item._id,).btn.btn-danger Xóa
                                    